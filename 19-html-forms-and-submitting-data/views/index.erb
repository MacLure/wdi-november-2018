<h2>Film Library</h2>
<ul>
  <% Film.all.each do |film| %>
    <li>
      <span><%= film.title %></span>
      <form action="/films" method="post">
        <input type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete">
      </form>
    </li>
  <% end %>
</ul>

<h2>New Film</h2>
<form class="new-film" action="/films" method="post">
  <!-- workaround for sending put, patch, and delete requests -->
  <!-- <input type="hidden" name="_method" value="delete"> -->
  <div>
    <label for="film-title">Title</label>
    <input id="film-title" type="text" name="title" placeholder="e.g. Moonlight">
    <!-- input type: text -->
  </div>

  <div>
    <!-- input types: date / time / email / tel / url / color / range / number / search -->
    <!-- <input type="date">
    <input type="time">
    <input type="number">
    <input type="email">
    <input type="tel">
    <input type="url">
    <input type="search">
    <input type="range">
    <input type="color"> -->
  </div>

  <div>
    <!-- textarea -->
    <label for="film-description">Summary of film</label>
    <textarea name="description" id="film-description" placeholder="e.g. Once upon a time..."></textarea>
  </div>

  <div>
  <!-- input radio -->
    <fieldset>
      <legend>Rating</legend>

      <label for="1-star">
        <span>1 star</span>
        <input id="1-star" type="radio" name="rating" value="1">
      </label>

      <label for="2-stars">
        <span>2 stars</span>
        <input id="2-stars" type="radio" name="rating" value="2">
      </label>

      <label for="3-stars">
        <span>3 stars</span>
        <input id="3-stars" type="radio" name="rating" value="3">
      </label>
    </fieldset>
  </div>

  <div>
  <!-- input checkbox -->
    <label for="film-available">
      <span>Film in library?</span>
      <input id="film-available" type="checkbox" name="available" value="1">
    </label>
  </div>


  <div>
    <!-- select / option -->
    <label for="film-country">Country:</label>
    <select name="country" id="film-country">
      <option value="">Please select a country</option>
      <option value="CA">Canada</option>
      <option value="US">United States</option>
      <option value="GB">United Kingdom</option>
    </select>
  </div>


  <div>
    <!-- file -->
    <!-- <input type="file"> -->
  </div>

  <!-- hidden -->
  <!-- <input type="hidden"> -->

  <div>
    <!-- input submit / button -->
    <!-- <input type="submit" value="Go create film!"> -->
    <button type="submit">
      <img src="https://placekitten.com/250/250" alt="a cat">
      <span>
        Go make a film!
      </span>
    </button>
  </div>

</form>

